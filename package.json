{
  "name": "vare-project",
  "private": true,
  "description": "vare packages",
  "keywords": [
    "vare"
  ],
  "repository": "git@github.com:bichikim/vare.git",
  "license": "MIT",
  "author": "bichi@live.co.kr",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@vue/cli-service",
      "**/@vue/**",
      "**/vue-router"
    ]
  },
  "scripts": {
    "build": "pnpm run build --filter vare",
    "deploy": "pnpm run deploy --filter vare ",
    "dev:example": "pnpm run dev --filter example... --parallel",
    "docs": "vuepress dev",
    "clean": "rimraf node_modules && lerna clean",
    "preversion": "yarn build",
    "format:package.json": "sort-package-json \"package.json\" \"packages/*/package.json\" ",
    "test": "jest"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^4.1.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@babel/preset-typescript": "^7.13.0",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/cli-plugin-typescript": "^4.5.11",
    "@vue/cli-service": "^4.5.11",
    "@vue/eslint-plugin": "^4.2.0",
    "@welldone-software/webpack-monorepo-resolver": "^0.4.0",
    "babel-loader": "^8.2.2",
    "jest": "^26.6.3",
    "eslint": "^7.18.0",
    "lerna": "^3.22.1",
    "ts-node": "^9.1.1",
    "sort-package-json": "^1.48.1",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0"
  },
  "optionalDependencies": {
    "vuepress": "^1.8.0"
  }
}
