{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    "plugins": [{"transform": "@zerollup/ts-transform-paths"}],
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules",
      "./node_modules/@types",
      "./node_modules"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.tsx",
    "tests/**/*.tsx"
  ]
}
